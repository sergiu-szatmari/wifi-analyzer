{
  "compilerOptions": {
    "outDir": "build",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,

    "inlineSources": true,
    "sourceMap": true,

    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]
  }
}